---
interface Props {
  title: string;
  subtitle?: string;
  description: string;
  coverImage: string;
  duration: string;
  level: string;
  lessonsCount: number;
  href: string;
}

const { title, subtitle, description, coverImage, duration, level, lessonsCount, href } =
  Astro.props;
---

<a href={href} class="block">
  <div
    class="bg-surface-1 rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300"
  >
    <div class="relative">
      <img src={coverImage} alt={title} class="w-full h-48 object-cover" />
      {
        level && (
          <span class="absolute top-4 right-4 px-3 py-1 bg-surface-2/80 backdrop-blur-sm rounded-full text-sm">
            {level}
          </span>
        )
      }
    </div>

    <div class="p-6">
      <h3 class="text-xl font-bold mb-2">{title}</h3>
      {subtitle && <p class="text-text-secondary text-sm mb-2">{subtitle}</p>}
      <p class="text-text-secondary text-sm mb-4 line-clamp-2">{description}</p>

      <div class="flex items-center gap-4 text-sm text-text-tertiary">
        <span>{duration}</span>
        <span>{lessonsCount} lessons</span>
      </div>
    </div>
  </div>
</a>
