---
// src/components/Hero.astro
import { Button } from '@/components/ui/button';

interface Props {
  subtitle: string;
  title: string;
  description: string;
  bulletPoints?: string[];
  primaryButtonText?: string;
  primaryButtonHref?: string;
  secondaryButtonText?: string;
  secondaryButtonHref?: string;
  class?: string;
}

const {
  subtitle,
  title,
  description,
  bulletPoints = [],
  primaryButtonText,
  primaryButtonHref = '#',
  secondaryButtonText,
  secondaryButtonHref = '#',
  class: className = '',
} = Astro.props;
---

<section class={`relative overflow-visible flex items-center ${className}`}>
  <div class="grid grid-cols-1 lg:grid-cols-2 h-full items-center relative">
    <!-- Left Content -->
    <div class="py-16 lg:py-24">
      <p class="text-indigo-400 text-xl mb-4">{subtitle}</p>

      <h1 class="text-5xl font-bold mb-6 text-text-primary">{title}</h1>
      <p class="text-xl text-text-secondary max-w-2xl">
        {description}
      </p>

      {
        bulletPoints.length > 0 && (
          <ul class="mt-6 space-y-4 text-lg text-text-secondary">
            {bulletPoints.map((point) => (
              <li class="flex items-start">
                <span class="text-feitlijn-purple mr-2">â†’</span>
                {point}
              </li>
            ))}
          </ul>
        )
      }

      <div class="flex flex-col w-full mt-6 sm:flex-row gap-4">
        {
          primaryButtonText && (
            <a href={primaryButtonHref} class="w-full sm:w-auto">
              <button class="w-full sm:w-auto bg-[#E1FF4C] hover:bg-[#E1FF4C]/90 text-black font-medium px-8 h-11 rounded-md inline-flex items-center justify-center text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50">
                {primaryButtonText}
              </button>
            </a>
          )
        }

        {
          secondaryButtonText && (
            <a href={secondaryButtonHref} class="w-full sm:w-auto">
              <button class="w-full sm:w-auto border border-white/20 text-white hover:bg-white/10 h-11 px-8 rounded-md inline-flex items-center justify-center text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50">
                {secondaryButtonText}
              </button>
            </a>
          )
        }
      </div>
    </div>

    <!-- Right Content -->
    <div class="hidden lg:block">
      <slot />
    </div>
  </div>
</section>
