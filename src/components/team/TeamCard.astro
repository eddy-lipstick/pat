---
// src/components/team/TeamCard.astro
interface Props {
  member: {
    id: string;
    data: {
      name: string;
      role: string;
      bio: string;
      profileImage?: string;
      expertise: string[];
      featured: boolean;
    };
    lang: string;
  };
}

const { member } = Astro.props;
// Remove .md extension if it exists
const cleanId = member.id.replace('.md', '');
---

<article class="group">
  <a href={`/${member.lang}/team/${cleanId}`}>
    <div
      class="relative overflow-hidden rounded-lg border bg-card text-card-foreground transition-all hover:border-primary"
    >
      {
        member.data.profileImage && (
          <div class="aspect-square overflow-hidden">
            <img
              src={member.data.profileImage}
              alt={member.data.name}
              class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
            />
          </div>
        )
      }
      <div class="p-4">
        <h3 class="text-xl font-semibold">{member.data.name}</h3>
        <p class="text-sm text-muted-foreground mb-2">{member.data.role}</p>
      </div>
    </div>
  </a>
</article>
