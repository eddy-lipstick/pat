---
// src/components/LanguageNotice.astro
const { originalLang = 'en' } = Astro.props;

// Language name mapping
const languageNames = {
  en: 'Engels',
  nl: 'Nederlands',
} as const;

const languageName = languageNames[originalLang] || originalLang;
---

<div class="mb-8 p-4 bg-surface-1 rounded-lg border border-border/50">
  <p class="text-sm text-text-secondary">
    Dit artikel is geschreven in het {languageName} en is nog niet vertaald naar het Nederlands.
  </p>
</div>
