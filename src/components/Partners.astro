---
import LegalloydLogo from './logos/LegalloydLogo.astro';
import HVALogo from './logos/HVALogo.astro';
import CLCALogo from './logos/CLCALogo.astro';
import LogoTooltip from '@/components/LogoTooltip';
import { partnerTranslations } from '@/i18n/translations/partners';

interface Props {
  lang: keyof typeof partnerTranslations;
}

const { lang } = Astro.props;
const t = partnerTranslations[lang];
---

<section class="py-16">
  <div class="max-w-6xl mx-auto">
    <p class="text-xl lg:text-2xl text-feitlijn-purple mb-16 max-w-2xl">{t.title}</p>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-12 md:gap-16">
      <LogoTooltip client:visible content={t.partners.legalloyd.description}>
        <div class="group relative flex items-center justify-center p-6">
          <LegalloydLogo
            class="w-full h-12 opacity-30 transition-all duration-500 ease-out group-hover:opacity-90 group-hover:scale-105"
          />
          <div
            class="absolute inset-0 rounded-lg transition-colors duration-300 group-hover:bg-white/5"
          >
          </div>
        </div>
      </LogoTooltip>

      <LogoTooltip client:visible content={t.partners.hva.description}>
        <div class="group relative flex items-center justify-center p-6">
          <HVALogo
            class="w-full h-12 opacity-30 transition-all duration-500 ease-out group-hover:opacity-90 group-hover:scale-105"
          />
          <div
            class="absolute inset-0 rounded-lg transition-colors duration-300 group-hover:bg-white/5"
          >
          </div>
        </div>
      </LogoTooltip>

      <LogoTooltip client:visible content={t.partners.clca.description}>
        <div class="group relative flex items-center justify-center p-6">
          <div class="w-full max-w-[120px] mx-auto h-8 flex items-center">
            <CLCALogo
              class="w-full opacity-30 transition-all duration-500 ease-out group-hover:opacity-90 group-hover:scale-105"
            />
          </div>
          <div
            class="absolute inset-0 rounded-lg transition-colors duration-300 group-hover:bg-white/5"
          >
          </div>
        </div>
      </LogoTooltip>
    </div>
  </div>
</section>
