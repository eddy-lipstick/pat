---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from '@/components/ui/card';
import { ArrowRight } from 'lucide-react';
import TrainingCard from '@/components/TrainingCard';

const allTraining = await getCollection('training');
---

<BaseLayout title="Onze trainingen">
  <div class="py-8 space-y-16">
    <!-- Hero Section -->
    <div class="container mx-auto">
      <div class="w-full md:w-1/2 px-4 md:px-8 py-12 md:py-20">
        <p class="text-feitlijn-purple text-lg mb-6">Onze trainingen</p>
        <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold mb-8 text-text-primary leading-tight">
          Leer zelf<br />legal design
        </h1>
      </div>
    </div>

    <!-- Training Grid -->
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {allTraining.map((training) => <TrainingCard training={training} client:load />)}
      </div>
    </div>
  </div>
</BaseLayout>
