---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/utils';

const lang = 'nl';
const t = useTranslations(lang);
---

<BaseLayout title="Test Pagina" lang={lang}>
  <div class="container mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold mb-8">Dit is een test pagina (NL)</h1>
    <p class="mb-4">Huidige taal: {lang}</p>
    <a href="/en/test" class="text-primary hover:underline">Schakel naar Engels</a>
  </div>
</BaseLayout>
