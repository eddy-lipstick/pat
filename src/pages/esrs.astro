---
import EsrsLayout from '../layouts/EsrsLayout.astro';
import { getFeaturedCaseStudies } from '../lib/case-studies';
import { Card, CardContent, CardDescription, CardFooter, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import ServicesGrid from '../components/services/ServicesGrid.astro';
import { getCollection } from 'astro:content'; 

import BubbleMap from '../components/bubbles/BubbleMap';
import LogoGrid from '../components/LogoGrid.astro';
import { ArrowRight, MessageCircle } from "lucide-react";
import VideoTestimonials from '../components/VideoTestimonials';
import OurFormula from '../components/OurFormula';
import VideoPlayer from "@/components/VideoPlayer";
import ImageLightbox from '../components/ImageLightbox';



---

<EsrsLayout title="Home">
  <section class="relative min-h-screen overflow-visible">
    <VideoPlayer
      client:only="react"
      src="/esrs/clip-1.mp4"
      poster="/case-studies/amsterdam.jpg"
      title="Video Title"
    />

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <ImageLightbox
        client:load
        src="/esrs/still-1.jpg"
        alt="Omschrijving"
        className="aspect-video w-full"
      />
      <ImageLightbox
        client:load
        src="/esrs/still-2.jpg"
        alt="Omschrijving"
        className="aspect-video w-full"
      />
      <ImageLightbox
        client:load
        src="/esrs/still-3.jpg"
        alt="Omschrijving"
        className="aspect-video w-full"
      />
      <ImageLightbox
        client:load
        src="/esrs/still-4.jpg"
        alt="Omschrijving"
        className="aspect-video w-full"
      />
    </div>

    <ImageLightbox
      client:load
      src="/esrs/materialiteit.jpg"
      alt="Omschrijving"
      className="aspect-video w-full"
    />

    <VideoPlayer
      client:only="react"
      src="/esrs/clip-1.mp4"
      poster="/case-studies/amsterdam.jpg"
      title="Video Title"
    />

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <ImageLightbox
        client:load
        src="/esrs/scherm-1.jpg"
        alt="Omschrijving"
        className="aspect-video w-full"
      />
      <ImageLightbox
        client:load
        src="/esrs/scherm-2.jpg"
        alt="Omschrijving"
        className="aspect-video w-full"
      />
    </div>
  </section>
</EsrsLayout>