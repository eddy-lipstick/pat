---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Mail, Phone, MapPin } from 'lucide-react';
import { Button } from '../../components/ui/button';
import { Input } from '../../components/ui/input';
import { Card } from '../../components/ui/card';
import Hero from '@/components/Hero.astro';
import ImageLightbox from '@/components/ImageLightbox';
---

<BaseLayout title="Contact Us | Project Kiwi" description="Get in touch with us">
  <div class="relative">
    <!-- Hero Section -->
    <Hero
      class="min-h-[60vh]"
      subtitle="Contact"
      title="Neem contact op met Patroon"
      description="Benieuwd wat we voor jouw organisatie kunnen betekenen? We denken graag met je mee."
    >
      <div class=""></div>
    </Hero>

    <!-- Contact Cards -->
    <section class="py-12 bg-background">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Phone Card -->
          <a
            href="tel:+31203036050"
            class="group p-6 bg-surface-1 rounded-lg hover:bg-surface-2 transition-colors"
          >
            <Phone className="w-6 h-6 mb-4 text-primary" />
            <div class="text-sm text-text-secondary mb-2">Telefoon</div>
            <div class="text-lg text-foreground">(+31) 20 - 303 60 50</div>
          </a>

          <!-- Email Card -->
          <a
            href="mailto:info@patroon.nl"
            class="group p-6 bg-surface-1 rounded-lg hover:bg-surface-2 transition-colors"
          >
            <Mail className="w-6 h-6 mb-4 text-primary" />
            <div class="text-sm text-text-secondary mb-2">E-mail</div>
            <div class="text-lg text-foreground">info@patroon.nl</div>
          </a>

          <!-- Address Card -->
          <a
            href="https://www.google.com/maps"
            target="_blank"
            class="group p-6 bg-surface-1 rounded-lg hover:bg-surface-2 transition-colors"
          >
            <MapPin className="w-6 h-6 mb-4 text-primary" />
            <div class="text-sm text-text-secondary mb-2">Adres</div>
            <div class="text-lg text-foreground">
              Gedempt Hamerkanaal 173<br />
              1021 KP Amsterdam
            </div>
          </a>
        </div>
      </div>
    </section>

    <section>
      <ImageLightbox
        client:load
        src="./images/kantoor/plattegrond.svg"
        className="aspect-video w-full"
      />
    </section>

    <!-- Contact Form Section -->
    <section class="py-16">
      <div class="container max-w-6xl mx-auto px-4">
        <div class="max-w-2xl mx-auto text-center mb-12">
          <div class="text-primary mb-2">Contact</div>
          <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
            Nieuwsgierig? Plan een kennismaking
          </h2>
        </div>

        <div class="max-w-md mx-auto">
          <form class="space-y-6" action="/success" method="POST">
            <div>
              <label for="name" class="block text-sm font-medium text-foreground mb-2">
                Naam
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 bg-background border border-border rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                placeholder="Je naam"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-foreground mb-2">
                E-mail
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-background border border-border rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                placeholder="Je e-mailadres"
              />
            </div>

            <button
              type="submit"
              class="w-full px-6 py-3 bg-primary text-white font-medium rounded-lg hover:bg-primary/90 transition-colors"
            >
              Verstuur
            </button>
          </form>

          <p class="text-center mt-6 text-text-secondary">
            Of stuur een mail naar <a
              href="mailto:info@patroon.nl"
              class="text-primary hover:underline">info@patroon.nl</a
            >
          </p>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
