---
// src/pages/test-components.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardDescription, CardFooter, CardHeader, CardTitle } from "@/components/ui/card";
import { Alert, AlertDescription, AlertTitle } from "@/components/ui/alert";
---

<BaseLayout title="Test Components">
    <div class="space-y-8">
        <h1 class="text-3xl font-bold">Component Testing Page</h1>
        
        <section class="space-y-4">
            <h2 class="text-2xl font-semibold">Buttons</h2>
            <div class="flex gap-4">
                <Button client:load>Default Button</Button>
                <Button client:load variant="destructive">Destructive</Button>
                <Button client:load variant="outline">Outline</Button>
                <Button client:load variant="secondary">Secondary</Button>
            </div>
        </section>

        <section class="space-y-4">
            <h2 class="text-2xl font-semibold">Cards</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <Card>
                    <CardHeader>
                        <CardTitle>Card Title</CardTitle>
                        <CardDescription>Card Description</CardDescription>
                    </CardHeader>
                    <CardContent>
                        <p>Card content goes here.</p>
                    </CardContent>
                    <CardFooter>
                        <Button client:load>Action</Button>
                    </CardFooter>
                </Card>
            </div>
        </section>

        <section class="space-y-4">
            <h2 class="text-2xl font-semibold">Alerts</h2>
            <Alert>
                <AlertTitle>Heads up!</AlertTitle>
                <AlertDescription>
                    This is a test alert to verify shadcn components are working.
                </AlertDescription>
            </Alert>
        </section>
    </div>
</BaseLayout>