---

interface Props {
  title: string;
}

const { title } = Astro.props;
---

  <article class="max-w-4xl mx-auto px-4">
    {/* Hero section */}
    <header class="py-16 space-y-8">
      {/* Label */}
      <div class="text-primary text-sm font-medium tracking-wide uppercase">
        Case Study
      </div>

      {/* Title */}
      <h1 class="text-4xl md:text-6xl font-roc-grotesk leading-tight">
        {title}
      </h1>
    </header>

    {/* Main content */}
    <div class="prose prose-slate prose-lg max-w-none mb-16 text-foreground">
      {/* Custom styling for the MDX content */}
      <style is:global>
        .prose h2 {
          @apply text-2xl md:text-3xl font-roc-grotesk mt-12 mb-6;
        }
        .prose p {
          @apply text-text-secondary leading-relaxed mb-6;
        }
        .prose ul {
          @apply space-y-2 my-6;
        }
        .prose li {
          @apply text-text-secondary pl-2;
        }
        .prose strong {
          @apply text-text-primary font-semibold;
        }
      </style>
      
      <slot />
    </div>
  </article>

  {/* Optional: Add a gradient background effect */}
  <div class="fixed inset-0 -z-10 bg-background">
    <div class="absolute inset-0 bg-gradient-to-tr from-feitlijn-purple-900/20 to-transparent"></div>
  </div>
