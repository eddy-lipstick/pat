---
// src/layouts/BaseLayout.astro
import '../styles/globals.css'; // Add this import
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/fonts.css';
import SEO from '@/components/SEO.astro';
import Container from '../components/Container.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
  noindex?: boolean;
  nofollow?: boolean;
}

const { title, description, image, type, noindex, nofollow } = Astro.props;
---

<!doctype html>
<html lang="nl">
  <head>
    <SEO
      title={title}
      description={description}
      image={image}
      type={type}
      noindex={noindex}
      nofollow={nofollow}
    />

    <!-- Structured Data / JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Patroon Legal Design",
        "url": "https://www.patroon.nl",
        "logo": "https://www.patroon.nl/logo.png",
        "sameAs": [
          "https://www.linkedin.com/company/patroon-legal-design"
          // Add other social media URLs
        ]
      }
    </script>
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <Navbar variant="dark" />

    <main class="flex-1 pt-24">
      <Container>
        <slot />
      </Container>
    </main>

    <Footer />
  </body>
</html>
